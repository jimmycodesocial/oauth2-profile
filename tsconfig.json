{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "spec"
  ]
}